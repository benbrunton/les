
[hidden]
hidden = [".*"]
except = [".les", ".gitignore"]

[colour]
[colour.green]
colour = ["LICENSE", "*.md"]

[colour.grey]
colour = [".gitignore", ".les", "*.lock"]

[annotate]
[annotate.config]
files = ["*.toml", "*.yml", "*.json"]
annotate = "configuration files"

[dir]
[dir.colour]
[dir.colour.blue]
colour = ["*"]

